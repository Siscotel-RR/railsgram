<div class="row justify-content-center d-flex ml-auto">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h2 class="justify-content-center d-flex ml-auto">Iniciar Sesión</h2>
    <br />
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Correo", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "*********", class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="form-group justify-content-center d-flex ml-auto">
          <%= f.submit "Iniciar Sesión", class: "btn btn-success col-md-8" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= link_to "¿No tienes Cuenta?", new_registration_path(resource_name), class: "btn btn-link" %>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= link_to "¿Se te olvido la contraseña?", new_password_path(resource_name), class: "btn btn-link" %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="col-md-3"></div>
</div>