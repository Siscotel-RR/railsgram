<div class="row justify-content-center">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h2 class="justify-content-center d-flex ml-auto">Registrate y Comparte con todos!</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="form-group">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Nombre", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="form-group">
              <%= f.text_field :last_name, autocomplete: "last_name", placeholder: "Apellido", class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
            <div class="col-md-8 col-sm-8 col-xs-12">
              <div class="form-group">
                <%= f.email_field :email, autocomplete: "email", placeholder: "Correo", class: "form-control" %>
              </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12">
              <div class="form-group">
                <%= f.date_field :birthday, autocomplete: "birthday", placeholder: "Fecha de Nacimiento", class: "form-control" %>
              </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6col-xs-12">
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "Contraseña", class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6 col-sm-6col-xs-12">
              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmar Contraseña", class: "form-control" %>
              </div>
            </div>
        </div>
        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="form-group justify-content-center d-flex ml-auto">
              <%= f.submit "Registrame!", class: "btn btn-success col-md-8" %>
            </div>
          </div>
        </div>        
      <% end %>
      <%= link_to "Iniciar Sesión", new_session_path(resource_name), class: "btn btn-primary btn-sm" %>
  </div>
  <div class="col-md-3"></div>
</div>