                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <%= form_for @image do |f| %>
                    <div class="form-group">
                        <%= f.text_field :description, class: "form-control", placeholder: "DescripciÃ³n" %>
                    </div>
                    <div class="form-group justify-content-center d-flex ml-auto">
