<div class="col-md-3">
    <div class="card" style="width: 18rem;">
        <img src="" class="card-img-top rounded" alt="...">
        <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text"><%= image.description %></p>
            <%= link_to "Editar", edit_image_path(image), class: "btn btn-primary" %>
            <%= link_to "Eliminar", image, method: :delete, data: { confirm: "Estas seguro?" }, class: "btn btn-danger" %>
        </div>
    </div>
</div>